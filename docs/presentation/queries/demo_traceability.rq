PREFIX odim:  <http://connectdigitalstudy.com/ontology#>
PREFIX prov:  <http://www.w3.org/ns/prov#>
PREFIX rdfs:  <http://www.w3.org/2000/01/rdf-schema#>

# Marker → weekly computation → daily features → observations → raw files
SELECT ?marker ?markerLabel ?weeklyComp ?dailyFeature ?obs ?raw ?rawLabel
WHERE {
  ?marker a odim:DerivedFeature ;
          rdfs:label ?markerLabel ;
          odim:wasComputedBy ?weeklyComp ;
          odim:wasDerivedFrom ?dailyFeature .
  ?dailyFeature odim:wasDerivedFrom ?obs .
  ?obs odim:wasGeneratedBy ?importAct .
  ?importAct prov:used ?raw .
  OPTIONAL { ?raw rdfs:label ?rawLabel }
}
ORDER BY ?marker ?dailyFeature
